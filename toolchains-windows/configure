#!/bin/bash -e

export ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

echo "#!/bin/bash -e" > "${ROOT_DIR}/env"

if [ "$1" == "x86" ]; then
	echo "export ARCH=windows-x86" >> "${ROOT_DIR}/env"
	echo "export HOST_COMPILER=i686-w64-mingw32" >> "${ROOT_DIR}/env"
elif [ "$1" == "x64" ]; then
	echo "export ARCH=windows-x64" >> "${ROOT_DIR}/env"
	echo "export HOST_COMPILER=x86_64-w64-mingw32" >> "${ROOT_DIR}/env"
else
	echo "Invalid configuration. Valid options are:"
	echo "x86"
	echo "x64"
fi
